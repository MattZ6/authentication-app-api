{
  "private": true,
  "name": "auth-flow-api",
  "description": "Simple API for user authentication.",
  "version": "0.5.3-beta",
  "license": "MIT",
  "author": {
    "name": "Matheus Felipe Zanin",
    "email": "matt_z6@hotmail.com",
    "url": "https://github.com/MattZ6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MattZ6/auth-flow-api"
  },
  "bugs": "https://github.com/MattZ6/auth-flow-api/issues",
  "scripts": {
    "prestart": "pnpm run db:migrate",
    "postinstall": "pnpm exec prisma generate",
    "build": "rm -rf dist && babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "start": "node dist/main/server.js",
    "dev": "cross-env DATABASE_PORT=5432 tsnd -r tsconfig-paths/register --inspect --exit-child --transpile-only --ignore-watch node_modules --respawn src/main/server.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js)\" --write",
    "test": "jest --passWithNoTests",
    "test:cov": "pnpm run test --coverage",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "prisma:dev": "cross-env DATABASE_HOST=localhost prisma",
    "db:migrate": "pnpm run prisma migrate deploy",
    "db:config": "pnpm run db:migrate"
  },
  "engines": {
    "node": "16.18.0"
  },
  "prisma": {
    "schema": "src/infra/database/prisma/schema.prisma"
  },
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.19.6",
    "@babel/node": "7.20.0",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.19.4",
    "@babel/preset-typescript": "7.18.6",
    "@faker-js/faker": "7.6.0",
    "@swc/core": "1.3.11",
    "@swc/jest": "0.2.23",
    "@types/bcryptjs": "2.4.2",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.14",
    "@types/jest": "29.2.2",
    "@types/jsonwebtoken": "8.5.9",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "eslint": "8.26.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-import-helpers": "1.3.1",
    "eslint-plugin-prettier": "4.2.1",
    "git-commit-msg-linter": "4.2.1",
    "jest": "29.2.2",
    "prettier": "2.7.1",
    "prisma": "4.5.0",
    "ts-jest": "29.0.3",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "@prisma/client": "4.5.0",
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "helmet": "6.0.0",
    "joi": "17.6.4",
    "jsonwebtoken": "8.5.1",
    "swagger-ui-express": "4.5.0"
  }
}
